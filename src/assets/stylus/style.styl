@import 'partials/fonts'
@import 'partials/variables'
@import 'partials/mixins'
// @import '../libs/slick/slick/slick.css'
// @import '../libs/plyr/dist/plyr.css'
// @import '../../../build/assets/i/svg/bg/css/sprite.css'

body
	margin 0
	padding 0
	padding-bottom 700px
	open-sans()
	font-size 18px
	color text-color
	background bg-color

*
	box-sizing border-box

h1,
h2,
h3,
h4,
h5,
h6
	margin 0
	padding 0

img
	max-width 100%
	height auto

.hidden
	display none

.container-big
	margin 0 auto
	width 1200px
	outline 1px solid green
	@media screen and (max-width: xl) {
		width 660px
	}
	@media screen and (max-width: md) {
		width 320px
	}

.container
	margin 0 auto
	padding: 0 120px
	width 1200px
	outline 1px solid red

	@media screen and (max-width: xl) {
		padding 0 20px
		width 620px
	}
	@media screen and (max-width: md) {
		width 280px
	}

p
	margin 0
	padding 0

ul
	reset-list()

@import 'blocks/page-header.styl'
@import 'blocks/nav-menu.styl'
@import 'blocks/nav-list.styl'
@import 'blocks/close-menu.styl'
@import 'blocks/show-menu.styl'
